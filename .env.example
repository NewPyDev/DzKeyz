# =============================================================================
# DZKeyz Digital Store - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
STORE_NAME=DZKeyz Digital Store
BASE_URL=http://localhost:5000

# =============================================================================
# EMAIL CONFIGURATION (Required)
# =============================================================================
# Sign up at https://resend.com for free email service
RESEND_API_KEY=re_your_resend_api_key_here
MAIL_FROM=noreply@yourdomain.com
MAIL_NAME=Your Store Name

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================
# Algeria-specific payment methods
BARIDIMOB_RIP=your_baridimob_rip_number
CCP_ACCOUNT=your_ccp_account_number

# =============================================================================
# CONTACT INFORMATION
# =============================================================================
CONTACT_EMAIL=support@yourdomain.com
TELEGRAM_LINK=https://t.me/yoursupport
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# =============================================================================
# SOCIAL LOGIN (Optional)
# =============================================================================
# Google OAuth - Create project at https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Discord OAuth - Create app at https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# =============================================================================
# AI FEATURES (Optional)
# =============================================================================
# OpenAI API for AI-generated product descriptions
# Get your key at https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# =============================================================================
# ADVANCED CONFIGURATION (Optional)
# =============================================================================
# Flask environment
FLASK_ENV=development
FLASK_DEBUG=True

# Database (SQLite is used by default)
DATABASE_URL=sqlite:///store.db

# File upload limits
MAX_CONTENT_LENGTH=16777216

# Session configuration
PERMANENT_SESSION_LIFETIME=86400